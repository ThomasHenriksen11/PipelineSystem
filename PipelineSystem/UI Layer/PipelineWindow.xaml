<Window x:Class="PipelineSystem.PipelineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PipelineSystem"
        mc:Ignorable="d"
        Title="PipelineWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="0*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="0*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition  Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Column="2" Grid.Row="1" Background="White" Click="OpenWindow">
            <Viewbox Stretch="Uniform">
                <Label Content="back" ></Label>
            </Viewbox>
        </Button>

        <Button Grid.Column="6" Grid.Row="2" Background="White" Click="OpenAddDeal">
            <Viewbox Stretch="Uniform">
                <Label Content="Add deal" ></Label>
            </Viewbox>
        </Button>
        <Button Grid.Column="6" Grid.Row="1" Background="White" Click="ToAddTitleWindow">
            <Viewbox Stretch="Uniform">
                <Label Content="Add title"></Label>
            </Viewbox>
        </Button>
        <Viewbox>
            <Label Grid.Column="2" Grid.Row="4" Content="Drop spot" HorizontalAlignment="center" VerticalAlignment="Center"></Label>
        </Viewbox>
        <ScrollViewer Grid.Column="2" Grid.Row="4" Margin="0,33.4,9.6,0" Grid.RowSpan="4" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.ColumnSpan="5">
            <Viewbox Stretch="Uniform" Width="1570" Height="500" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <Border BorderBrush="Black" BorderThickness="0.6">
                <Grid DockPanel.Dock="Top" Height="Auto" AllowDrop="True" Drop="Grid_Drop" DragOver="Grid_DragOver" Background="Transparent">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>
                            <ColumnDefinition Width="*" ></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                        </Grid.RowDefinitions>
                    <Viewbox Grid.Column="0" Grid.Row="2" >
                        <TextBox  Text="Advokaterne Bergholt"></TextBox>
                    </Viewbox>
                        <Viewbox Stretch="UniformToFill" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="10000000" >
                            <Label Background="LightBlue"></Label>
                        </Viewbox>
                    <Viewbox HorizontalAlignment="Stretch"  Grid.Column="0" Grid.Row="0">
                        <TextBox TextWrapping="Wrap" Grid.Column="0" Grid.Row="0" Text="Contact established"></TextBox>
                    </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1">
                            <TextBox Text="Product A offered" ></TextBox>

                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="2" Grid.Row="0">
                            <TextBox Text="Product B offered" ></TextBox>

                        </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="0">
                        <TextBox Text="Deal lost" Background="#e83933" ></TextBox>
                    </Viewbox>
                    <Viewbox Stretch="Uniform" Grid.Column="3" Grid.Row="0">
                        <TextBox TextWrapping="Wrap" Text="Deal won" Background="GreenYellow"></TextBox>
                    </Viewbox>
                        <Viewbox Stretch="Uniform" Grid.Column="4" Grid.Row="2" >
                            <TextBox Text="Bismarkvejs advokater" ></TextBox>
                        </Viewbox>
                        <Viewbox Grid.Column="5" Grid.Row="0"></Viewbox>
                    </Grid>
                </Border>
            </Viewbox>
        </ScrollViewer>
    </Grid>
</Window>
